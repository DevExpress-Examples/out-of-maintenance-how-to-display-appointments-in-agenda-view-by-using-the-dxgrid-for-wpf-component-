<dx:DXWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    x:Class="AgendaViewDemo.GoToDateDialog"
    Title="Select a date" Height="95" Width="305" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="5,5,0,0" Text="Go to date:" VerticalAlignment="Stretch" TextAlignment="Center"/>
        <dxe:DateEdit Name="dateEditGoToDate" Grid.Column="1" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
        <Button Name="btnOK" Content="OK" Grid.Row="1" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnOK_Click"/>
        <Button Content="Cancel" Grid.Column="1" Grid.Row="1" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" IsCancel="True"/>
    </Grid>
</dx:DXWindow>
